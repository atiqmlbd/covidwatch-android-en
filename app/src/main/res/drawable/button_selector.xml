<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- pressed -->
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/primaryBackground" />

            <solid android:color="@color/secondaryBackground" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />

            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_checked="true"> <!-- focused -->
        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@color/primaryBackground" />

                    <solid android:color="@color/secondaryBackground" />

                    <padding
                        android:left="1dp"
                        android:right="1dp"
                        android:bottom="1dp"
                        android:top="1dp" />

                    <corners android:radius="10dp" />

                </shape>
            </item>
            <item
                android:drawable="@drawable/checkmark_vector"
                android:gravity="right"
                android:right="15dp"
                android:top="15dp"
                android:bottom="15dp"
                />
        </layer-list>
    </item>

    <item>      <!-- default -->
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/buttonBorder" />

            <solid android:color="@color/secondaryBackground" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />

            <corners android:radius="10dp" />

        </shape>
    </item>
</selector>